{
  "openapi": "3.0.1",
  "info": {
    "title": "Project X Music API",
    "description": "Controls Spotify battle music playback and boss phase loops.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://projectxmusic.onrender.com"
    }
  ],
  "paths": {
    "/play": {
      "post": {
        "summary": "Play a Spotify track",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "track_uri": { "type": "string" }
                },
                "required": ["track_uri"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Track started." }
        }
      }
    },
    "/pause": {
      "post": {
        "summary": "Pause current track",
        "responses": {
          "200": { "description": "Track paused." }
        }
      }
    },
    "/seek": {
      "post": {
        "summary": "Seek to position in track",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "position_ms": { "type": "integer" }
                },
                "required": ["position_ms"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Seeked to position." }
        }
      }
    },
    "/loopmap": {
      "post": {
        "summary": "Get loop mapping for track phases",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "track_uri": { "type": "string" }
                },
                "required": ["track_uri"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Phase loop mapping returned."
          }
        }
      }
    }
  }
}
