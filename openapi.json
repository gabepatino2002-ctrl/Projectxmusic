{
  "openapi": "3.0.1",
  "info": {
    "title": "ProjectX Music Director API",
    "description": "Controls Spotify playback for Project X battles. Supports manual playback, pausing, boss phase transitions, and AI-driven autoTrack selection.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://projectxmusic.onrender.com"
    }
  ],
  "paths": {
    "/play": {
      "post": {
        "summary": "Play a specific Spotify track by URI",
        "operationId": "playTrack",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "uri": {
                    "type": "string",
                    "example": "spotify:track:4uLU6hMCjMI75M1A2tKUQC"
                  }
                },
                "required": ["uri"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Track started",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "action": { "type": "string" },
                    "uri": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/pause": {
      "post": {
        "summary": "Pause current Spotify playback",
        "operationId": "pausePlayback",
        "responses": {
          "200": {
            "description": "Playback paused",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "action": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/event": {
      "post": {
        "summary": "Handle a battle event or boss phase change",
        "operationId": "battleEvent",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phase": {
                    "type": "string",
                    "example": "phase2"
                  }
                },
                "required": ["phase"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Event handled",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "action": { "type": "string" },
                    "phase": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/autoTrack": {
      "post": {
        "summary": "Auto-select a Spotify track based on mood and context",
        "operationId": "autoTrack",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "mood": {
                    "type": "string",
                    "example": "intense"
                  },
                  "context": {
                    "type": "string",
                    "example": "boss fight"
                  }
                },
                "required": ["mood", "context"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Track auto-selected",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "action": { "type": "string" },
                    "chosen": {
                      "type": "object",
                      "properties": {
                        "uri": { "type": "string" },
                        "title": { "type": "string" },
                        "artist": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
